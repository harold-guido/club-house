<div class="column is-four-fifths">
  <% @posts.each do |post| %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <strong><%= post.title %></strong><br>
          <% if user_signed_in? %>
            <small><%= post.user.username %></small><br>
          <% end %>
          <p>
            <%= post.body %>
          </p>
          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>
